script/source = "extends Control

@onready var hp_bar: ProgressBar = $HPBar

var entity: Entity

func _ready() -> void:
	if not entity:
		return
		
	hp_bar.max_value = entity.max_hp
	hp_bar.value = entity.current_hp

func _process(_delta: float) -> void:
	if not entity:
		return
		
	hp_bar.value = entity.current_hp
"

